<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gris"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".secciones.panel.documentos.Documentos">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Documentos"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

    <!-- Barra de búsqueda -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewDocumentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:queryHint="Buscar Documentos..."
        app:iconifiedByDefault="false"
        android:background="@drawable/border2"
        app:queryHint="buscar_documentos"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <!--
        <!- Botón para crear un nuevo mensaje ->
    <Button
        android:id="@+id/buttonDesignarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designar Tarea"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/anaranjado"
        app:layout_constraintTop_toBottomOf="@+id/searchViewDocumentos"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>
    -->
    <!-- Botón para ordenar mensajes -->
    <Button
        android:id="@+id/btnOrdenarDocumentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#3F51B5"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:text="Ordenar por Fecha"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchViewDocumentos"/>

    <!-- Lista de mensajes (puedes usar un RecyclerView aquí) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDocumentos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnOrdenarDocumentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>